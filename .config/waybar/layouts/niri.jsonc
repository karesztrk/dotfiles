{
  "layer": "top",
  "output": [
    "*"
  ],
  "height": 10,
  "exclusive": true,
  "passthrough": false,
  "reload_style_on_change": true,
  "include": [
    "$XDG_CONFIG_HOME/waybar/modules/*json*",
    "$XDG_CONFIG_HOME/waybar/includes/includes.json"
  ],
  "modules-left": [
    "group/pill#left"
  ],
  "modules-center": [
    "group/pill#center"
  ],
  "modules-right": [
    "group/pill#activity",
    "group/pill#right"
  ],
  "group/pill#left": {
    "orientation": "inherit",
    "modules": [
      "niri/workspaces"
    ]
  },
  "group/pill#center": {
    "orientation": "inherit",
    "modules": [
      "clock"
    ]
  },
  "group/pill#activity": {
    "orientation": "inherit",
    "modules": [
      "tray"
    ]
  },
  "group/pill#right": {
    "orientation": "inherit",
    "modules": [
      "cpu",
      "memory",
      "backlight",
      "pulseaudio",
      "battery",
      "custom/powermenu"
    ]
  }
}
